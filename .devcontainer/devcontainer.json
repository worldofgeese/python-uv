{
    "name": "uv",
    "build": {
        "context": "..",
        "dockerfile": "Dockerfile",
    },
    "workspaceMount": "source=${localWorkspaceFolder},target=/opt/app-root,type=bind",
    "workspaceFolder": "/opt/app-root",
    "features": {
        "ghcr.io/devcontainers-contrib/features/exercism-cli:1": {},
        "ghcr.io/stuartleeks/dev-container-features/shell-history:0": {},
    },
    "customizations": {
        "settings": {
            "python.defaultInterpreterPath": "/opt/app-root/.venv/bin/python",
        },
        "vscode": {
            "extensions": [
                "charliermarsh.ruff",
                "exiasr.hadolint",
                "kevinrose.vsc-python-indent",
                "mosapride.zenkaku",
                "ms-azuretools.vscode-docker",
                "ms-python.python",
                "njpwerner.autodocstring",
                "redhat.vscode-yaml",
                "shardulm94.trailing-spaces",
                "tamasfe.even-better-toml",
                "ms-python.mypy-type-checker"
            ]
        }
    },
    "containerEnv": {
        "DISPLAY": "dummy",
        "PYTHONUNBUFFERED": "True",
        "UV_LINK_MODE": "copy",
        "UV_PROJECT_ENVIRONMENT": "/opt/app-root/.venv",
        "UV_PYTHON_PREFERENCE": "only-system",
        "UV_PYTHON": "3.13",
    },
    "postCreateCommand": "uv sync --frozen",
    "postStartCommand": "uv run pre-commit install; uv venv",
    "remoteUser": "default"
}
